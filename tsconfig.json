{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "nodenext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": false,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "types": ["cypress", "node"],
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"],
      "~lib/*": ["./lib/*"],
      "~server/*": ["./server/*"]
    }
  },
  "include": ["src", "server", "worker", "scripts"],
  "exclude": ["cypress"]
}
